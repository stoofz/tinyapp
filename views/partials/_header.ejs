<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>

    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>

    <% if(username){ %>
      <form class="form-inline justify-content-right" action="/logout" method="post">
      Logged in as: <%= username%>
      <input type="submit" style="margin: 1em" value="Logout">
      </form>
    <% } else{ %>  
      <form class="form-inline justify-content-right" action="/login" method="post">
        <input type="text" style="width: 200px; margin: 1em" name="username"><br><br>
        <input type="submit" value="Login">
      </form> 
   <% } %>

   




  </nav>
</header>
